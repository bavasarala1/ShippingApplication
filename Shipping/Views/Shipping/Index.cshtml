@model Shipping.Models.Shippings

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<h2>Order</h2>
@using (Html.BeginForm("Create", "Shipping", FormMethod.Post, new { id = "shipform" }))
{
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="ontrol-label col-md-2">Full Name</label>

            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })

            </div>
        </div>
        <div class="form-group">
            <label class="ontrol-label col-md-2">Shipping Options</label>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.ShipType, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" id="Submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<script>
    $(document).ready(function () {
        $("#Submit").click(function () {
            if ($('#FullName').val() == '') {
                $('#FullName').css('border-color', 'red');
                return;
            }
            else {
                $('#FullName').css('border-color', '');
            }

            if ($('#ShipType').val() == '') {
                $('#ShipType').css('border-color', 'red');
                return;
            }
            else {

                var tal = parseInt($('#ShipType').val()) || 0;
                if (tal <= 0 || tal > 10) {
                    $('#ShipType').css('border-color', 'red');
                    return;
                }
                else {
                    $('#ShipType').css('border-color', '');
                }
            }
            
            $("#shipform").submit();

        })
    });
</script>

